<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/profile"
    android:layout_height="match_parent"
    tools:context=".ui.view.nav.profile.fragment.ProfileFragment">

    <TextView
        android:id="@+id/tvTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="MI PERFIL" />

    <TextView
        android:id="@+id/tvCorreoTittle"
        android:layout_width="0dp"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="45dp"
        app:layout_constraintEnd_toStartOf="@id/tvCorreo"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTittle"
        android:text="CORREO" />

    <TextView
        android:id="@+id/tvNombreTittle"
        android:layout_width="0dp"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="45dp"
        app:layout_constraintEnd_toStartOf="@id/tvNombre"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvCorreoTittle"
        android:text="NOMBRE" />

    <TextView
        android:id="@+id/tvApellidosTittle"
        android:layout_width="0dp"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="45dp"
        app:layout_constraintEnd_toStartOf="@id/tvApellidos"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvNombreTittle"
        android:text="APELLIDOS" />

    <TextView
        android:id="@+id/tvTelefonoTittle"
        android:layout_width="0dp"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="45dp"
        app:layout_constraintEnd_toStartOf="@id/tvTelefono"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvApellidosTittle"
        android:text="TELEFONO:" />

    <TextView
        android:id="@+id/tvDireccionTittle"
        android:layout_width="0dp"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toStartOf="@id/tvDireccion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTelefonoTittle"
        android:text="DIRECCION" />

    <TextView
        android:id="@+id/tvCorreo"
        android:layout_width="0dp"
        android:textSize="20sp"
        android:layout_height="45dp"
        android:gravity=""
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tvCorreoTittle"
        app:layout_constraintTop_toBottomOf="@id/tvTittle"
        tools:text="CORREO" />

    <EditText
        android:id="@+id/tvNombre"
        android:layout_width="0dp"
        android:maxLength="44"
        android:layout_margin="20dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvNombreTittle"
        app:layout_constraintTop_toBottomOf="@id/tvCorreo"
        tools:text="NOMBRE" />

    <EditText
        android:id="@+id/tvApellidos"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:maxLength="79"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvApellidosTittle"
        app:layout_constraintTop_toBottomOf="@id/tvNombre"
        tools:text="APELLIDOS" />

    <EditText
        android:id="@+id/tvTelefono"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:maxLength="12"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvTelefonoTittle"
        app:layout_constraintTop_toBottomOf="@id/tvApellidos"
        tools:text="TELEFONO" />

    <EditText
        android:id="@+id/tvDireccion"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="wrap_content"
        android:maxLength="198"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvDireccionTittle"
        app:layout_constraintTop_toBottomOf="@+id/tvTelefono"
        tools:text="DIRECCION" />

    <Button
        android:id="@+id/btnActualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:layout_margin="30dp"
        android:backgroundTint="#433C3C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDireccion" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:backgroundTint="#433C3C"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnActualizar" />

    <ProgressBar
        android:id="@+id/pbProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>